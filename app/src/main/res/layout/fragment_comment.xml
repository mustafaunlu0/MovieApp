<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/post_background"
    android:layout_margin="10dp"
    android:padding="10dp"
    >



    <LinearLayout
        android:id="@+id/imageLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="20dp"
        >
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/commentProfileImageView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@color/teal_200"
            app:shapeAppearanceOverlay="@style/roundedImageViewRounded"
            app:strokeColor="@color/white"
            app:strokeWidth="3dp"
            android:src="@drawable/profile2"
            android:scaleType="centerCrop"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/imageLayout"
        app:layout_constraintStart_toEndOf="@id/imageLayout"
        android:orientation="vertical"
        android:layout_marginStart="5dp"
        android:layout_marginTop="15dp"
        >
        <TextView
            android:id="@+id/commentUsernameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jack Ambersen"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:textColor="@color/black"
            />

    </LinearLayout>
    <LinearLayout
        android:id="@id/postLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/imageLayout"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="20dp"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="20dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mov-Name: "
                android:textStyle="bold"
                android:textColor="#CC3404"/>
            <TextView
                android:id="@+id/commentMovieNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="End Game "
                android:textColor="@color/black"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginStart="20dp"

            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Category: "
                android:textStyle="bold"
                android:textColor="#CC3404"/>
            <TextView
                android:id="@+id/commentCategoryTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Science-Fiction"
                android:textColor="@color/black"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            >

            <TextView
                android:id="@+id/commentPostedTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/LoremIpsum"
                android:textColor="@color/black"/>

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/likeLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/postLayout"
        app:layout_constraintStart_toStartOf="parent"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            >
            <TextView
                android:id="@+id/numberOfLike"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text="18"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="-10dp"
                android:layout_marginStart="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/bottomLayout"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:ignore="NotSibling" />
            <TextView
                android:id="@+id/likes"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="likes"
                android:layout_marginTop="5dp"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="-5dp"
                app:layout_constraintStart_toStartOf="@id/numberOfLike"
                app:layout_constraintTop_toBottomOf="@id/bottomLayout"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:ignore="NotSibling" />

            <TextView
                android:id="@+id/numberOfDisLike"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text="-20"
                android:layout_marginTop="5dp"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="-10dp"
                app:layout_constraintStart_toStartOf="@id/likes"
                app:layout_constraintTop_toBottomOf="@id/bottomLayout"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:ignore="NotSibling" />
            <TextView
                android:id="@+id/dislikes"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="dislikes"
                android:layout_marginTop="5dp"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="-10dp"
                app:layout_constraintStart_toStartOf="@id/numberOfDisLike"
                app:layout_constraintTop_toBottomOf="@id/bottomLayout"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:ignore="NotSibling" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_like"
                android:layout_marginLeft="25dp"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_dislike"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="20dp"
                />

        </LinearLayout>

    </LinearLayout>
    <EditText
        android:id="@+id/commentEditText"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/comment_background"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@+id/likeLayout"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/black"
        android:hint="Add to comment"
        android:textSize="14sp"
        android:padding="10dp"

        />
    <ImageView
        android:id="@+id/commentSendButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/commentEditText"
        app:layout_constraintEnd_toEndOf="@id/commentEditText"
        app:layout_constraintBottom_toBottomOf="@id/commentEditText"
        android:layout_marginEnd="15dp"
        android:src="@drawable/ic_round_send_24"/>
    <TextView
        android:id="@+id/commentsTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Comments"
        android:textSize="15sp"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textColor="@color/title"
        android:layout_marginStart="15dp"
        app:layout_constraintTop_toBottomOf="@+id/commentEditText"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/commentRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/commentsTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:padding="20dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>